<div class="card">
<h5 class="card-header font-monospace">Edit <%= resource_name.to_s.humanize %></h5>

  <div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email ,class:"form-label font-monospace"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>
      <br />
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password ,class:"form-label font-monospace" %> <i class="font-monospace">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <% if @minimum_password_length %>

      <em class="font-monospace"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
      <br />
  <div class="field">
    <%= f.label :password_confirmation,class:"form-label font-monospace" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>
      <br />
  <div class="field">
    <%= f.label :current_password ,class:"form-label font-monospace"%> <i class="font-monospace">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-primary font-monospace" %>
  </div>
<% end %>

<br/>
<div class="card">
<div class="card-header">
<p class="font-monospace">Delete account</p>
 </div>
 <div class="card-body">
 <%= button_to "Delete my account", registration_path(resource_name), form: { data: { confirm: "Are you sure?" } }, method: :delete, class:"btn btn-danger font-monospace" %>
</div>
 </div>
<br/>
<%= link_to "Back", :back, class:"font-monospace" %>
</div>
</div>
